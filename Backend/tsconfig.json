{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./dist",
    "noImplicitAny": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@services/*": ["services/*"],
      "@db/*": ["db/*"]
    },
    "types": ["node", "express"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
