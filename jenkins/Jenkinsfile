pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Bitbucket'tan kodu çek
                // git 'https://gobitbucket.havelsan.com.tr/scm/test-md/doob_api_tests.git'
                echo 'git atlandı'
            }
        }

        stage('Install Yarn') {
            steps {
                // Yarn'ı indir ve yükle
                script {
                    sh 'curl -o- -L https://yarnpkg.com/install.sh | bash'
                    sh 'export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"'
                }
            }
        }

        
        stage('Install Dependencies') {
            steps {
                // Node.js için Yarn kullanarak bağımlılıkları yükle
                sh 'yarn --version'
                // sh 'yarn install'
            }
        }
    }

    post {
        always {
            // clean up
            deleteDir()
        }

        success {
            echo 'SUCCESS JENKINS'
        }

        failure {
            echo 'ERROR JENKINS'
        }
    }
}